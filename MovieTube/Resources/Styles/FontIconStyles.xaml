<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Resources/Brushes/FontIconBrushes.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="BigFontIconStyle" TargetType="FontIcon">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="{ThemeResource FontIconForegroundSolidColorBrush}" />
    </Style>

    <Style x:Key="SmallFontIconStyle" TargetType="FontIcon">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{ThemeResource FontIconForegroundSolidColorBrush}" />
    </Style>

    <Style x:Key="CaptionFontIconStyle" TargetType="FontIcon">
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{ThemeResource FontIconForegroundSolidColorBrush}" />
    </Style>

</ResourceDictionary>
