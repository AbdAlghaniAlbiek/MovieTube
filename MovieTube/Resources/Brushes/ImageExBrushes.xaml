<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--  ImageEx background in light theme  -->
    <Color x:Key="ImageExBackgroundColorLightTheme">#7D7D7D</Color>

    <!--  ImageEx background in dark theme  -->
    <Color x:Key="ImageExBackgroundColorDarkTheme">#0E0E0E</Color>

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ImageExSolidColorBrush" Color="{StaticResource ImageExBackgroundColorLightTheme}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="ImageExSolidColorBrush" Color="{StaticResource ImageExBackgroundColorDarkTheme}" />
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
