<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Color x:Key="LoadingBackgroundLightTheme">#FFFFFF</Color>
    <Color x:Key="LoadingBackgroundDarkTheme">#000000</Color>
    <Color x:Key="LoadingNetworkErrorIssueColor">#cd5c5c</Color>
    <Color x:Key="LoadingDataColor">#E8B30D</Color>

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="LoadingBackground" Color="{StaticResource LoadingBackgroundLightTheme}" Opacity="0.7"/>
            <SolidColorBrush x:Key="LoadingNetworkErrorIssueBrush" Color="{StaticResource LoadingNetworkErrorIssueColor}"/>
            <SolidColorBrush x:Key="LoadingDataBrush" Color="{StaticResource LoadingDataColor}"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="LoadingBackground" Color="{StaticResource LoadingBackgroundDarkTheme}" Opacity="0.7"/>
            <SolidColorBrush x:Key="LoadingNetworkErrorIssueBrush" Color="{StaticResource LoadingNetworkErrorIssueColor}"/>
            <SolidColorBrush x:Key="LoadingDataBrush" Color="{StaticResource LoadingDataColor}"/>

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>


</ResourceDictionary>
